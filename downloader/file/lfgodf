Update vedomost SET podrazdel="бухгалтерия",zp=1000 where fio LIKE "Иванов%" 
-- перевод  всех Иванов в бухгалтерию и начисление ему зп 1000
Update vedomost SET podrazdel="литейный цех",zp=zp/1.2 where fio LIKE "%" 
-- переводим всех сотрудников в один цех и уменьшаем им зп
DELETE From vedomost;
-- удаление ведомости
DELETE From vedomost where fio like "Иванов%";
-- удалить из ведомости всех ивановых
DELETE From vedomost where nomer = 3;
-- удаляет номер из таблицы
Drop table vedomost;
-- удаляет всю таблицу
Create table vedomost ( id int, fio varchar(50),zp real);
-- создание простейшей таблицы
